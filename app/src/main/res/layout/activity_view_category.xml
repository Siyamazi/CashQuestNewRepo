<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView filling the whole screen -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ViewCategories"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_alignParentTop="true" />



    <!-- FAB: Dashboard (bottom-center) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/home"
        android:contentDescription="Go to Dashboard" />

    <!-- Back button (top-left, only show if not on Dashboard) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/back"
        android:contentDescription="Back"
        android:visibility="visible" />
</RelativeLayout>
